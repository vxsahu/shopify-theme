    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-faq-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-faq-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-faq-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin-bottom: 12px;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-weight: 500;
  }

  .ai-faq-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-faq-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin-top: 16px;
    line-height: 1.6;
  }

  .ai-faq-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-faq-item-{{ ai_gen_id }} {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.item_background }};
    transition: all 0.3s ease;
  }

  .ai-faq-item-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.border_hover_color }};
    box-shadow: {{ block.settings.shadow_hover }};
  }

  .ai-faq-question-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.question_padding }}px;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    font-size: {{ block.settings.question_size }}px;
    color: {{ block.settings.question_color }};
    font-weight: 600;
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .ai-faq-question-{{ ai_gen_id }}:hover {
    color: {{ block.settings.question_hover_color }};
  }

  .ai-faq-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-left: 20px;
    position: relative;
    transition: transform 0.3s ease;
  }

  .ai-faq-icon-{{ ai_gen_id }}::before,
  .ai-faq-icon-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    background-color: {{ block.settings.icon_color }};
    transition: all 0.3s ease;
  }

  .ai-faq-icon-{{ ai_gen_id }}::before {
    width: 100%;
    height: 2px;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .ai-faq-icon-{{ ai_gen_id }}::after {
    width: 2px;
    height: 100%;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
  }

  .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-icon-{{ ai_gen_id }}::after {
    transform: translateX(-50%) rotate(90deg);
    opacity: 0;
  }

  .ai-faq-answer-{{ ai_gen_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, padding 0.4s ease;
  }

  .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-answer-{{ ai_gen_id }} {
    max-height: 1000px;
  }

  .ai-faq-answer-content-{{ ai_gen_id }} {
    padding: 0 {{ block.settings.question_padding }}px {{ block.settings.question_padding }}px;
    font-size: {{ block.settings.answer_size }}px;
    color: {{ block.settings.answer_color }};
    line-height: 1.7;
  }

  .ai-faq-footer-{{ ai_gen_id }} {
    text-align: center;
    margin-top: {{ block.settings.footer_spacing }}px;
    padding: {{ block.settings.footer_padding }}px;
    background-color: {{ block.settings.footer_background }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-faq-footer-text-{{ ai_gen_id }} {
