{%- comment -%}
  Modern Megamenu Styles
  3-column layout: Sidebar | Collection Grid | Featured Product
{%- endcomment -%}

<style>
  /* Modern Megamenu Layout */
  .megamenu--modern {
    padding: 0;
  }

  .megamenu__layout {
    display: flex;
    gap: 30px;
    padding: 30px 0;
  }

  /* Left Sidebar - Menu Links */
  .megamenu__sidebar {
    flex: 0 0 180px;
    border-right: 1px solid var(--colorBorder);
    padding-right: 30px;
  }

  .megamenu__sidebar-link {
    display: block;
    padding: 12px 0;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .megamenu__sidebar-link:hover {
    border-bottom-color: var(--colorTextBody);
  }

  .megamenu__sidebar-title {
    display: block;
    font-weight: 600;
    font-size: 14px;
    color: var(--colorTextBody);
  }

  .megamenu__sidebar-subtitle {
    display: block;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--colorTextBody);
    opacity: 0.6;
    margin-top: 2px;
  }

  /* Center - Collection Images Grid */
  .megamenu__collections {
    flex: 1;
    padding: 0 20px;
  }

  .megamenu__collections-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 20px;
  }

  @media only screen and (max-width: 1200px) {
    .megamenu__collections-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .megamenu__collection-tile {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .megamenu__collection-tile:hover {
    transform: translateY(-5px);
  }

  .megamenu__collection-tile:hover .megamenu__collection-image-wrap {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .megamenu__collection-image-wrap {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    overflow: hidden;
    background: var(--colorSmallImageBg);
    margin-bottom: 10px;
    transition: box-shadow 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
  }

  .megamenu__collection-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .megamenu__collection-tile:hover .megamenu__collection-img {
    transform: scale(1.1);
  }

  .megamenu__collection-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--colorBodyDim);
  }

  .megamenu__collection-placeholder svg {
    width: 30px;
    height: 30px;
    opacity: 0.4;
  }

  .megamenu__collection-title {
    font-size: 12px;
    color: var(--colorTextBody);
    font-weight: 500;
    line-height: 1.3;
    max-width: 100px;
  }

  /* See All Tile */
  .megamenu__collection-tile--see-all .megamenu__collection-image-wrap {
    background: var(--colorBodyDim);
    border: 2px dashed var(--colorBorder);
  }

  .megamenu__see-all-icon {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--colorTextBody);
    opacity: 0.5;
    transition: opacity 0.3s ease;
  }

  .megamenu__collection-tile--see-all:hover .megamenu__see-all-icon {
    opacity: 1;
  }

  .megamenu__see-all-icon svg {
    width: 24px;
    height: 24px;
  }

  /* Right - Featured Product */
  .megamenu__featured {
    flex: 0 0 200px;
  }

  .megamenu__featured-card {
    display: block;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    height: 280px;
    text-decoration: none;
  }

  .megamenu__featured-image-wrap {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  .megamenu__featured-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .megamenu__featured-card:hover .megamenu__featured-img {
    transform: scale(1.05);
  }

  .megamenu__featured-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    color: #fff;
  }

  .megamenu__featured-title {
    display: block;
    font-size: 16px;
    font-weight: 600;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  /* Responsive */
  @media only screen and (max-width: 960px) {
    .megamenu__layout {
      flex-wrap: wrap;
    }

    .megamenu__sidebar {
      flex: 0 0 100%;
      border-right: none;
      border-bottom: 1px solid var(--colorBorder);
      padding-right: 0;
      padding-bottom: 20px;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .megamenu__sidebar-link {
      padding: 8px 15px;
      border: 1px solid var(--colorBorder);
      border-radius: 20px;
    }

    .megamenu__collections {
      flex: 0 0 100%;
      padding: 20px 0;
    }

    .megamenu__featured {
      flex: 0 0 100%;
    }

    .megamenu__featured-card {
      height: 200px;
    }
  }
</style>
